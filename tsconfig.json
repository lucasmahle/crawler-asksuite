{
  "compilerOptions": {
    
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist/",
    "sourceMap": true,
    
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "alwaysStrict": true,
    
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    
    "moduleResolution": "node",
    "baseUrl": "./",
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*",
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}